{
  "testRunner": "bun",
  "plugins": ["@stryker-mutator/bun-runner"],
  "mutate": [
    "src/**/*.ts"
  ],
  "logLevel": "info",
  "thresholds": {
    "high": 80,
    "low": 60,
    "break": 50
  },
  "coverageAnalysis": "off",
  "tempDirName": ".stryker-tmp",
  "cleanTempDir": true,
  "bun": {
    "testFiles": ["tests/**/*.test.ts"],
    "timeout": 30000,
    "processPool": true,
    "maxWorkers": 4
  }
}