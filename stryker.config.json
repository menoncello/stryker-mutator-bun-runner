{
  "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "testRunner_comment": "Basic Stryker configuration for mutation testing",
  "testRunner": "bun",
  "coverageAnalysis": "off",
  "mutate": [
    "src/**/*.ts",
    "!src/**/*.d.ts",
    "!src/**/*.spec.ts",
    "!src/**/*.test.ts"
  ],
  "logLevel": "info",
  "concurrency": 2,
  "reporters": ["html", "clear-text", "progress"],
  "htmlReporter": {
    "fileName": "mutation-report.html",
    "baseDir": "reports/mutation"
  },
  "tempDirName": "stryker-tmp",
  "cleanTempDir": true,
  "thresholds": {
    "high": 80,
    "low": 60
  }
}
