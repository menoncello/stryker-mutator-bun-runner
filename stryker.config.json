{
  "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "testRunner": "command",
  "plugins": [],
  "mutate": [
    "src/**/*.ts"
  ],
  "commandRunner": {
    "command": "bun test --bail"
  },
  "coverageAnalysis": "off",
  "reporters": ["html", "clear-text", "progress", "event-recorder"],
  "concurrency": 1,
  "timeoutMS": 1500,
  "timeoutFactor": 1,
  "dryRunTimeoutMinutes": 2,
  "maxTestRunnerReuse": 0,
  "logLevel": "info",
  "thresholds": {
    "high": 80,
    "low": 60,
    "break": null
  },
  "tempDirName": ".stryker-tmp",
  "cleanTempDir": true,
  "disableTypeChecks": true,
  "htmlReporter": {
    "fileName": "reports/mutation/mutation.html"
  }
}