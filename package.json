{
  "name": "@stryker-mutator/bun-runner",
  "version": "0.3.0",
  "description": "A test runner plugin to use Bun with StrykerJS, the JavaScript mutation testing framework",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc -w",
    "test": "bun test test/",
    "test:watch": "bun test test/ --watch",
    "test:coverage": "bun test test/ --coverage --coverage-reporter=text --coverage-reporter=lcov",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src test",
    "lint:fix": "eslint src test --fix",
    "check": "npm run typecheck && npm run lint && npm run test",
    "stryker": "./run-stryker.sh",
    "stryker:direct": "stryker run",
    "stryker:debug": "stryker run --logLevel debug",
    "stryker:bun": "node scripts/cleanup-processes.cjs && stryker run -c stryker-bun.config.json",
    "stryker:pool": "node scripts/test-process-pool.cjs",
    "cleanup": "node scripts/cleanup-processes.cjs",
    "docs": "typedoc --out docs/typedoc src/index.ts",
    "docs:watch": "typedoc --watch --out docs/typedoc src/index.ts",
    "prepare": "husky",
    "prepublishOnly": "npm test && npm run lint",
    "version": "npm run lint:fix && git add -A src",
    "postversion": "git push && git push --tags",
    "diagnose": "node scripts/diagnose-process-explosion.cjs",
    "diagnose:files": "node scripts/test-individual-files.cjs",
    "diagnose:tests": "node scripts/test-individual-tests.cjs",
    "analyze": "npm run analyze:duplication && npm run analyze:complexity && npm run analyze:deps && npm run analyze:size",
    "analyze:duplication": "jscpd src",
    "analyze:complexity": "madge --circular --extensions ts src/",
    "analyze:deps": "madge --image deps.svg --extensions ts src/",
    "analyze:size": "size-limit",
    "analyze:lint-all": "eslint src test --max-warnings 0",
    "precommit": "npm run lint && npm run typecheck && npm test",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\""
  },
  "keywords": [
    "stryker",
    "stryker-plugin",
    "stryker-test-runner",
    "bun",
    "mutation-testing"
  ],
  "author": "Stryker Bun Runner Contributors",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stryker-mutator/stryker-bun.git"
  },
  "bugs": {
    "url": "https://github.com/stryker-mutator/stryker-bun/issues"
  },
  "homepage": "https://github.com/stryker-mutator/stryker-bun#readme",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "files": [
    "dist",
    "src",
    "schema",
    "README.md"
  ],
  "peerDependencies": {
    "@stryker-mutator/core": "^9.0.0",
    "bun": ">=1.0.0"
  },
  "dependencies": {
    "@stryker-mutator/api": "^9.0.1",
    "@stryker-mutator/util": "^9.0.1",
    "execa": "^9.6.0",
    "glob": "^11.0.3",
    "semver": "^7.5.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@size-limit/preset-small-lib": "^11.2.0",
    "@stryker-mutator/core": "^9.0.1",
    "@types/node": "^22.0.0",
    "@types/semver": "^7.5.0",
    "@types/source-map": "^0.5.2",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "c8": "^10.1.3",
    "eslint": "^9.0.0",
    "eslint-plugin-functional": "^9.0.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsdoc": "^51.3.4",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^3.0.4",
    "eslint-plugin-unicorn": "^59.0.1",
    "husky": "^9.1.7",
    "jscpd": "^4.0.5",
    "lint-staged": "^16.1.2",
    "madge": "^8.0.0",
    "prettier": "^3.6.2",
    "size-limit": "^11.2.0",
    "source-map": "^0.7.4",
    "typescript": "^5.0.0"
  },
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "50 KB"
    },
    {
      "path": "dist/src/BunTestRunner.js",
      "limit": "15 KB"
    },
    {
      "path": "dist/src/BunTestAdapter.js",
      "limit": "10 KB"
    }
  ],
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "bash -c 'npm run typecheck'"
    ],
    "*.{js,jsx,ts,tsx,json,md}": [
      "prettier --write"
    ]
  }
}
